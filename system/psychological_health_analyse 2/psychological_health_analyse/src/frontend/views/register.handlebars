<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- Favicon icon -->
    <link rel="/icon" type="image/png" sizes="16x16" href="/images/favicon.png">
    <title>注册</title>
    <!-- Bootstrap Core CSS -->
    <link href="/css/lib/bootstrap/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="/css/helper.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>

<body class="fix-header fix-sidebar">
    <!-- Preloader - style you can find in spinners.css -->
    <div class="preloader">
        <svg class="circular" viewBox="25 25 50 50">
			<circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="2" stroke-miterlimit="10" /> </svg>
    </div>
    <!-- Main wrapper  -->
    <div id="main-wrapper">

        <div class="unix-login">
            <div class="container-fluid">
                <div class="row justify-content-center">
                    <div class="col-lg-4">
                        <div class="login-content card">
                            <div class="login-form">
                              <div class="col-lg-12">
                                  {{#if user}}
                                          <div class="alert alert-danger">用户名已被使用，请重新输入</div>
                                  {{/if}}
                                  {{#if mail}}
                                          <div class="alert alert-danger">邮箱已被使用，请重新输入</div>
                                  {{/if}}
                                  {{#if errors}}
                                        {{#each errors}}
                                          <div class="alert alert-danger">{{msg}}</div>
                                        {{/each}}
                                  {{/if}}
                              </div>
                                <h4>注册</h4>
                                <form method="post" action="/users/register">
                                    <div class="form-group">
                                        <label>用户名</label>
                                        <input class="form-control" placeholder="输入用户名" name='username'>
                                    </div>
                                    <div class="form-group">
                                        <label>邮箱地址</label>
                                        <input type="email" class="form-control" placeholder="输入邮箱" name="email" >
                                    </div>
                                    <div class="form-group">
                                        <label>密码</label>
                                        <input type="password" class="form-control" placeholder="输入密码" name="password">
                                    </div>
                                    <div class="form-group">
                                        <label>确认密码</label>
                                        <input type="password" class="form-control" placeholder="确定密码" name="password2">
                                    </div>
                                    <div class="checkbox">

                                    </div>
                                    <button type="submit" class="btn" style="background-color:#1F7000">注册</button>
                                    <div class="register-link m-t-15 text-center">
                                        <p>Already have account ? <a href="/users/login"> 登录</a></p>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <!-- End Wrapper -->
    <!-- All Jquery -->
    <script src="/js/lib/jquery/jquery.min.js"></script>
    <!-- Bootstrap tether Core JavaScript -->
    <script src="/js/lib/bootstrap/js/popper.min.js"></script>
    <script src="/js/lib/bootstrap/js/bootstrap.min.js"></script>
    <!-- slimscrollbar scrollbar JavaScript -->
    <script src="/js/jquery.slimscroll.js"></script>
    <!--Menu sidebar -->
    <script src="/js/sidebarmenu.js"></script>
    <!--stickey kit -->
    <script src="/js/lib/sticky-kit-master/dist/sticky-kit.min.js"></script>
    <!--Custom JavaScript -->
    <script src="/js/scripts.js"></script>

</body>

</html>
